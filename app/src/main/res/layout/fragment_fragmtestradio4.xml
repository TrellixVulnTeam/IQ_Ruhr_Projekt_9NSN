<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="13dp"
        android:clickable="true"
        android:src="@android:drawable/checkbox_on_background" />

    <RadioGroup
        android:id="@+id/set_radiogroup4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="75dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/two_sets4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:padding="10dp"
            android:text="ja" />

        <RadioButton
            android:id="@+id/two_set4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:padding="10dp"
            android:text="Nein" />

        <TextView
            android:id="@+id/avg_testtv4"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:text="5/31"
            android:textSize="25dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/header4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:text="Setzen Sie eine ERP ein [z.B. SAP, Microsoft Dynamics, SAGE]?"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/simpleiqimage"
        android:layout_width="match_parent"
        android:layout_height="731dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-296dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="306dp"
        android:src="@drawable/iqfinal" />
</RelativeLayout>
